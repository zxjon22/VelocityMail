<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
    <!-- For more information on Entity Framework configuration, visit http://go.microsoft.com/fwlink/?LinkID=237468 -->
    <section name="velocityMail" type="VelocityMail.Configuration.VelocityMailServiceConfigurationSection, VelocityMail"/>
  </configSections>

  <velocityMail mode="Enabled" templatesAssembly="Samples.Complete.EmailTemplates, Samples.Complete">
    <globalVars>
      <add name="siteUrl" value="http://localhost:1234/"/>
    </globalVars>
  </velocityMail>

  <system.net>
    <mailSettings>
      <smtp deliveryMethod="Network">
        <network host="localhost" port="2525"/>
      </smtp>
    </mailSettings>
  </system.net>

  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.0"/>
  </startup>
</configuration>
